@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
<a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="CreateOrder">New Order</a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @user.UserName
                    
                                <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="ListOrders" asp-route-id="@user.Id" style="float: right;">Orders</a>
                                <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Edituser" asp-route-id="@user.Id" style="float: right;">Edit</a>
                                

                            </h5>
            </div>
            <div class="card-footer">
                
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Add new user
            </a>
        </div>
    </div>
}