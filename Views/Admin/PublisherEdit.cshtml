@{
}
@model BookDataViewModel

<h2>Add Publisher</h2>
<form asp-controller="Admin" asp-action="AddPublisher">
    <label>Publisher:</label>
    <input type="text" name="name" />
    <input type="submit" value="Add" />
</form>

<h2>Edit Publishers</h2>
<form asp-controller="Admin" asp-action="EditPublisher">
    <select name="id">
        @foreach (var p in Model.Publishers)
        {
            <option value=@p.Id>@p.Id : @p.Name</option>
        }
    </select>
    <label>Name:</label>
    <input type="text" name="name" />

    <input type="submit" value="Edit" />

</form>
<h2>Delete Publishers</h2>
<form asp-controller="Admin" asp-action="DeletePublisher">
    <select name="id">
        @foreach (var p in Model.Publishers)
        {
            <option value=@p.Id>@p.Id : @p.Name</option>
        }
    </select>

    <input type="submit" value="Delete" />
</form>
@if (ViewBag.ErrorMess != null)
{
    <p>@ViewBag.ErrorMess</p>

}