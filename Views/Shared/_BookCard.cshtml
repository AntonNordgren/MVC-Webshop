@model Book


<a href="@Url.Action("Details", "Book", new { id = Model.Id })">
    <div class="card border-1 rounded-0 m-auto">
        <div>
            <img class="card-img-top rounded-0" src=@Model.ImageUrl>
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center">@Model.Title</h5>
            @*<p class="card-text h-100">
            @Model.Description
        </p>*@

            @if (Model.BookAuthors != null)
            {
                @foreach (var author in Model.BookAuthors)
                {
                    <h5>@author</h5>
                }
            }

            <div class="text-center mt-3 m-auto" style="">
                <h3 class="text-danger">@Model.UnitPrice kr</h3>
                <a class="btn bg-secondary m-auto text-white rounded-0"
                   asp-controller = "ShoppingCartActions"
                       asp-action="AddToCart"
                       asp-route-bookId="@Model.Id">
                    Lägg i kundkorg
                </a>
            </div>

        </div>
    </div>
</a>

