@model Book
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl">
        <div class="caption">
            <h3 class="pull-right">@Model.UnitPrice.ToString("c")</h3>
            <h3>
                <a asp-controller="Book"
                   asp-action="Details"
                   asp-route-id="@Model.Id">@Model.Title</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToCart"            
                   asp-route-Id="@Model.Id">Add to cart</a>
            </p>
        </div>
    </div>
</div>
