@model CategoryViewModel

<div class="category">

    @if (Model != null)
    {
        <h3>@Model.Category</h3>

        <div class="row">
            <div class="col col-2">
                @foreach (var books in Model.BooksByCategory)
                {
                    <partial name="_BookCard" model=@books />
                }
            </div>
        </div>

    }

</div>